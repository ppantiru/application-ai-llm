{{html clean="false"}}
&lt;div id="chatUI">
    &lt;select id="model-menu">
    &lt;/select>
    &lt;div id="chatContent">&lt;/div>
    &lt;div id="formContainer">
        &lt;form id="userChat" method="POST" onsubmit="return false;">
            &lt;textarea name="input" id="txt-input" rows="10">&lt;/textarea>
            &lt;div id="form-control-panel">
                &lt;div class="stacked-items">
                    &lt;nav class="stacked-items">
                        &lt;select id="features-menu">
                            &lt;option value="summarize">Summarize&lt;/option>
                            &lt;option value="completion">Completion&lt;/option>
                            &lt;option value="auto-tagging">auto-tagging&lt;/option>
                            &lt;option value="translation">translate&lt;/option>
                            &lt;option value="free-prompt" selected>Free prompt&lt;/option>
                        &lt;/select>
                        &lt;select id="language-menu" style="display: none;">
                            &lt;option value="english" selected>English&lt;/option>
                            &lt;option value="french">French&lt;/option>
                            &lt;option value="romanian">Romanian&lt;/option>
                            &lt;option value="spanish">Spanish&lt;/option>
                        &lt;/select>
                    &lt;/nav>
                    &lt;div class="radio-btn-container">
                        &lt;div class="radio-btn">
                            &lt;input type="radio" id="requestMode" name="options" value="requestMode" checked>
                            &lt;label for="requestMode">Default Response Mode&lt;/label>&lt;br>
                        &lt;/div>
                        &lt;div class="radio-btn">
                            &lt;input type="radio" id="streamMode" name="options" value="streamMode">
                            &lt;label for="requestMode">Stream Response Mode&lt;/label>&lt;br>
                        &lt;/div>
                    &lt;/div>
                    &lt;div class="form-button-container">
                        &lt;div class="stacked-items">
                            &lt;div class="form-button">
                              &lt;input class="button" title="Clear the messages, but do not reset context." id="clearWin"
                                type="button" value="Clear Window" />
                              &lt;input class="button" title="Stop the current request." id="stopRqst" type="button" value="$services.localization.render('llm.ui.stop')" style="display: none;" />
                            &lt;/div>
                            &lt;div class="form-button">
                                &lt;input class="button" title="Submit your message to the selected model." id="subButton"
                                    type="submit" value="$services.localization.render('llm.ui.submit')" />
                                &lt;input class="button"
                                    title="Clear the conversation context (mean every message you sent until now will not be considered anymore)."
                                    id="clearCtxt" type="button" value="Clear Context" />
                            &lt;/div>
                        &lt;/div>
                    &lt;/div>
                &lt;/div>
            &lt;/div>
            &lt;input type="hidden" name="form_token" value="${services.csrf.token}" />
        &lt;/form>
    &lt;/div>
&lt;/div>
&lt;script type="text/javascript">
    var configs = "$objArray".replace("[","").split(", ");
    console.log(configs);
    require(['xwiki-llm'], function (llm) {
        llm.init(configs);
    });
&lt;/script>
